<div id="formContent" class="container">
  <!-- Tabs Titles -->
  <div class="wrapper fadeInDown">
    <!-- Icon -->
    <div class="fadeIn first">
      <img src="<%= image_path 'user.png' %>" id="icon" alt="User Icon"/>
    </div>
    <h2 class="h2 py-3">Log in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs my-2">
        <%= f.input :email,
                    required:   false,
                    autofocus:  true,
                    input_html: { autocomplete: "email",  class: "mb-3"} %>
        <%= f.input :password,
                    required:   false,
                    input_html: { autocomplete: "current-password" ,  class: "mb-3" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-primary my-3" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>









